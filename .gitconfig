[core]
	editor = vim
[pull]
    ff = only
[diff]
    colorMoved = default
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
    syntax-theme = DarkNeon
    zero-style = syntax "#181818"
[interactive]
    diffFilter = delta --color-only

